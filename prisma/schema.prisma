// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  fullname  String?
  email     String?
  isAdmin   Boolean  @default(false)
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
  token     String?  @unique
}

model Server {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  hostname    String
  description String?
  username    String?
  password    String?
  subnets     Subnet[]
}

model Subnet {
  id          Int      @id @default(autoincrement())
  subnet      String?  @unique
  description String?
  owner       Server   @relation(fields: [serverId], references: [id])
  serverId    Int
  devices     Device[]
}

model Device {
  id          Int     @id @default(autoincrement())
  address     String  @unique
  hostname    String?
  description String?
  owner       Subnet  @relation(fields: [subnetId], references: [id])
  subnetId    Int
}
